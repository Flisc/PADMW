<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    fontPath="fonts/RobotoMono-Regular.ttf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_endless_constellation"
    android:padding="5dp"
    android:scrollbarThumbHorizontal="@drawable/textinput_bg"
    tools:context=".user.ProfileActivity"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="335dp"
        android:layout_height="240dp"
        android:layout_marginTop="64dp"
        android:background="#00FFFFFF"
        android:src="@drawable/profile_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnLogout"
        fontPath="fonts/RobotoMono-Regular.ttf"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginBottom="680dp"
        android:background="@drawable/logout_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/goMain"
        fontPath="fonts/RobotoMono-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/border_white"
        android:padding="10dp"
        android:text="@string/go_to_your_movie_app"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingPrefix" />

    <ToggleButton
        android:id="@+id/showPass"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_baseline_visibility"
        android:textOff="@string/space"
        android:textOn="@string/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editPass"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Dark Mode"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border_white"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="Email :"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/border_white"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="Pass:"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>