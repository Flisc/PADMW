<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_endless_constellation"
    android:padding="10dp">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="370dp"
        android:layout_height="282dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_collapseMode="parallax" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="391dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_year"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00FFFFFF"
                        android:paddingLeft="5dp"
                        android:text="year"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/detail_runtime"
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:layout_margin="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingLeft="5dp"
                        android:text="runtime"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ToggleButton
                        android:id="@+id/add_to_fav_btn"
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/check_fav_button"
                        android:textColor="@color/white"
                        android:textOff="+ Add"
                        android:textOn="Added to Fav" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:paddingLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#00FFFFFF"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="title detail"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/detail_released"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00FFFFFF"
                        android:padding="2dp"
                        android:text="released"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/detail_plot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#00FFFFFF"
                        android:padding="2dp"
                        android:text="plot"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:padding="5dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/title_genre"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00FFFFFF"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Genres"
                        android:textColor="#FFFFFF" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_genre"
                        android:layout_width="392dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00FFFFFF"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/genre" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    fontPath="fonts/RobotoMono-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/textView11"
                            fontPath="fonts/RobotoMono-Bold.ttf"
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:text="Director"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/textView12"
                            fontPath="fonts/RobotoMono-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:text="Actors"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/textView16"
                            fontPath="fonts/RobotoMono-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:text="Language"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/textView"
                            fontPath="fonts/RobotoMono-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:text="Production"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="295dp"
                        android:layout_height="138dp"
                        android:background="#00FFFFFF"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/detail_director"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/detail_actors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/detail_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/detail_production"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


    <!--    </androidx.coordinatorlayout.widget.CoordinatorLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>